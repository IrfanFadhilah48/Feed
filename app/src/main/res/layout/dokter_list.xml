<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    CardView:cardCornerRadius="10dp"
    CardView:cardElevation="15dp"
    xmlns:CardView="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewDokter"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:id="@+id/linearlayoutdokterlist"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/imageViewDokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:text="Nama      :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textViewNameDokter"
                            android:textStyle="bold"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />

                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Alamat    :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textViewAlamatDokter"
                            android:textStyle="bold"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Telepon   :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textViewTeleponDokter"
                            android:textStyle="bold"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />

                    </TableRow>


                </TableLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/textViewDokterJamKondisi"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:textSize="27sp" />

                    <!--<TextView
                        android:id="@+id/textViewJamDokter"
                        android:layout_width="200dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/textViewDokterJamKondisi"
                        android:textSize="20sp" />-->

                    <TextView
                        android:id="@+id/jarak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="27sp"
                        android:layout_alignBaseline="@id/textViewDokterJamKondisi"
                        android:layout_alignParentRight="true"
                        android:text="tester"
                        android:layout_marginRight="5dp"/>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>